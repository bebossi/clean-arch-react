{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext", "ES2022"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["src/main/test/cypress"]
}
